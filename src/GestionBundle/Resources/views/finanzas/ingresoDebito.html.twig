{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<span class="h5">Resumen Cta Cte</span>

	{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'role':'form'}})}}
		<div class="form-group row">
		    <div class=" col-md-3">
    			{{	form_label(form.movimiento.fecha)	}}
    			{{	form_widget(form.movimiento.fecha, {'attr':{'class' : 'form-control form-control-sm', 'size' : '5'}})}}
    			<span class="text-danger">
    				{{ form_errors(form.movimiento.fecha) }}
    			</span>
			</div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">
                {{  form_label(form.movimiento.detalle)    }}
                {{  form_widget(form.movimiento.detalle, {'attr':{'class' : 'form-control form-control-sm'}})}}
                <span class="text-danger">
                    {{ form_errors(form.movimiento.detalle) }}
                </span>
            </div>    
		</div>        
        <div class="form-group row">
            <div class="col-md-2">
                {{  form_label(form.movimiento.cantidad)    }}
                {{  form_widget(form.movimiento.cantidad, {'attr':{'class' : 'form-control form-control-sm'}})}}
                <span class="text-danger">
                    {{ form_errors(form.movimiento.cantidad) }}
                </span>
            </div>    
            <div class="col-md-2">
                {{  form_label(form.movimiento.importe)    }}
                {{  form_widget(form.movimiento.importe, {'attr':{'class' : 'form-control form-control-sm'}})}}
                <span class="text-danger">
                    {{ form_errors(form.movimiento.importe) }}
                </span>
            </div>  
		</div>
		<div class="form-group row">
		    <div class="col-md-3">
    			{{	form_label(form.movimiento.ctacte)	}}
    			{{	form_widget(form.movimiento.ctacte, {'attr':{'class' : 'form-control form-control-sm'}})}}
    			<span class="text-danger">
    				{{ form_errors(form.movimiento.ctacte) }}
    			</span>
			</div>		      
		</div>
		<div class="form-group row">
			<div class="col-md-2">
				{{ form_widget(form.save, {'attr':{'class' : 'btn btn-success'}})}}
			</div>
		</div>	
	 {{ form_end(form) }}


	</div>
{% endblock %}